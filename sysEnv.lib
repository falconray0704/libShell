
os_distribution_name()
{
    echo $(lsb_release -cs)
}

os_distribution_number()
{
    echo $(lsb_release -rs)
}

os_distributor()
{
    echo $(lsb_release -is)
}

is_root_func()
{
    if [[ $EUID -ne 0 ]]; then
       echoR "Following operations must be run as root" 
       exit 1
    fi
}

get_iether_IP4()
{
    local IP_val=$(ip addr show $1 | awk '/inet / {print $2}' | cut -d/ -f 1)
    echo ${IP_val}
}

get_iether_MAC()
{
    local MAC_val=$(ip link show $1 | awk '/ether/ {print $2}')
    echo ${MAC_val}
}

docker_os()
{
    case $(uname -s) in
    "Linux")
        echo "linux"
        ;;
    *)
        echoR "Unknown os: $(uname -s)"
        exit 1
    esac
}

os_arch()
{
    echo $(uname -m)
}

docker_arch()
{
    # refer to: https://github.com/docker-library/official-images#multiple-architectures
    case $(os_arch) in
    "x86_64")
        echo "amd64"
        ;;
    "armv7l")
        echo "arm32v7"
        ;;
    *)
        echo ""
    esac 
}

docker_tag_arch()
{
    # refer to the tags in: https://hub.docker.com/_/ubuntu?tab=tags&page=1&ordering=last_updated
    case $(os_arch) in
    "x86_64")
        echo "amd64"
        ;;
    "armv7l")
        echo "arm/v7"
        ;;
    *)
        echo ""
    esac 
}

arm_version()
{
    case $(os_arch) in
    "armv7l")
        echo "v7"
        ;;
    *)
       echo ""
    esac
}

